.userinfo {
  display: flex;
  width: 100%;
  height: 80px;
  background-color: #FE6544;
  flex-direction: row;
}
.address-box{
    width: 100%;
    border-bottom: 8px solid #ededed;
}

.wx-info{
  display: flex;
  width: 80%;
  height: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.my-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  width: 20%;
}

.userinfo-avatar {
  width: 55px;
  height: 55px;
  margin: 8px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  font-size: 16px;
  font-weight: 600px;
}

.usermotto {
  margin-top: 200px;
}

.my-info text{
  font-size: 11px;
  color: #eee;
}
.my-info van-icon{
  margin-top: 5px;
}